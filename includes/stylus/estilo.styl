*
	padding 0px
	margin 0px
	
body 
	color black
	font-family Arial
	font-size 16px

.container
	
	width 100%
.row
	display flex
	justify-content center
	width 100%
.banner
	display none
.boton
	background #FF9E0B
	border none
	border-radius 5px
	color white
	display block
	height 100%
	margin-left 2px
	padding 2px
	width 20%

.buscar
	border 1px solid #003A66
	border-radius 5px
	display block
	font-size 14px
	height 80%
	padding 3px
	width 75%
	&:focus
		border 1px solid #FF9E0B
		background #E8E8E8
		
.evento
	background red
	border 1px solid red
	color white
	display flex
	border-radius 50%
	font-size 20px
	float left
	height 20px
	justify-content space-around
	width 20px

.full
	display block
	width 90%
.centrado
	display flex
	height 40px
	justify-content space-between
	margin 5px 0px
.tablaAgenda
	border 1px solid #003A66
	border-radius 10px
	border-spacing 0px
	margin 10px 0px
	padding 10px
	width 100%
	tr
		border 1px solid black
		border-radius 10px
		margin 0px
		padding 0px
		width 100%				
		th
			margin 0px
			padding-left 10px
			text-align left
		td
			text-align left
			padding-left 10px
			height auto
			padding 10px
			a
				background green
				border 1px solid green
				border-radius 5px
				color white
				height auto;
				padding 10px
				text-decoration none
				width auto;
