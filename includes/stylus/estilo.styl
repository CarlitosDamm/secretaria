*
	padding 0px
	margin 0px
	
body 
	color black
	font-family Arial
	font-size 16px

.container
	
	width 100%
.row
	display flex
	justify-content center
	width 100%
.banner
	display none
.boton
	background #FF9E0B
	border none
	border-radius 5px
	color white
	display block
	height 100%
	margin-left 2px
	padding 2px
	width 20%
.buscar
	border 1px solid #003A66
	border-radius 5px
	display block
	font-size 14px
	height 80%
	padding 3px
	width 75%
	&:focus
		border 1px solid #FF9E0B
		background #E8E8E8
		
.evento
	background red
	border 1px solid red
	color white
	display flex
	border-radius 50%
	font-size 20px
	float left
	height 20px
	justify-content space-around
	width 20px

.full
	display block
	width 90%
.centrado
	display flex
	height 40px
	justify-content space-between
	margin 5px 0px
.tablaAgenda
	border-spacing 0px
	margin 0px
	padding 0px
	width 100%
	tr
		border 1px solid black
		border-radius 10px
		margin 0px
		padding 0px
		width 100%
		&:nth-child(odd)
			color black
			background gray
			th
				margin 0px
				padding 0px
				background gray
			td
				background gray
				padding 2px
				
	th
		margin 0px
		padding 0px
	td
		padding 2px
//MEdia query, aqui empieza el responsive design de 680 px 0 menos
@media screen and (max-width: 320px)
	section
		display block
		article 
			float left
			margin-top 10px
			position relative
			width 100%
			h1
				display flex
				height auto
				justify-content center
				margin 20px 0px
				width 100%
	header
		nav
			background black
			height auto
			left -100%
			margin 0px
			opacity 1
			position fixed
			width 80%
			z-index 500
			ul
				display block
				list-style none
				text-decoration none
				width 100%
				li
					border-bottom rgba(225,255,255, 1)
					display block
					float none
					width 100%
					a
						border-bottom 1px solid white
						color white
						display block
						padding 10px
						text-decoration none
						&:hover
							background #003A66
					span 
						margin-right 10px
						
	.menu
		background #003A66
		border-bottom 1px solid white
		color white
		display block
		height 20px
		opacity 1
		padding 15px
		p
			display block
			float left
			height auto
		span
			float right
			height auto
/*
	Media Query para el dise√±o de 1000 px
	Se muestra el .banner como encabezado de la pagina
	
*/
@media screen and (min-width: 1000px)
	body 
		background white
	
	.rowN
		width 90%
	.banner
		height auto
		width 100%
		h1
			display block
			font-size 50px
			height auto
			letter-spacing 1.5px
			margin 40px auto		
	.boxFlex
		display flex
		justify-content center
	.boxEntre
		display flex
		justify-content space-between
	.left
		display flex
		justify-content flex-start	
		width 90%
		h4
			color gray
			font-family Times
			font-style italic
				
	.margen 
		margin 10px 0px
	.mitad
		width 45%
	.redondo
		background #003A66
		border-radius 10px 10px 0px 0px
		color white
		width 90%
	
		