@media screen and (min-width: 1000px)
	body 
		background white
	article
		padding 5px
	.rowN
		width 90%
	.banner
		height auto
		width 100%
		h1
			display block
			font-size 50px
			height auto
			letter-spacing 1.5px
			margin 40px auto		
	.boxFlex
		display flex
		justify-content center
	.boxEntre
		display flex
		justify-content space-between
	.left
		display flex
		justify-content flex-start	
